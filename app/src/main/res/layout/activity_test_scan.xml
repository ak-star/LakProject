<?xml version="1.0" encoding="utf-8"?>
<com.lak.autolayout.layout.AutoLinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_eeeeee"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/c_white"
        app:contentInsetStart="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="扫描二维码"
            android:textColor="@color/c_2d2d2d"
            android:textSize="30px" />
    </android.support.v7.widget.Toolbar>

    <com.lak.autolayout.layout.AutoFrameLayout
        android:id="@+id/scan_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</com.lak.autolayout.layout.AutoLinearLayoutCompat>